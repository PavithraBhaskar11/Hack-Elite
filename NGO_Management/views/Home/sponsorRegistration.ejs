<div class="content">
<div class="form-layout1">

    <div class="inner-form">
        <h1>REGISTER</h1>
        <div class="container">

            <form action="/spo_Register" method="post">
                <div class="form-group">
                    <div class="row row-cols-2 justify-content-between">
                        <div class="form-group row">
                            <label for="uid">User ID</label>
                            <input type="email" name="uid" placeholder="Enter email" class="form-control" required id="uid">
                        </div>

                        <div class="form-group row">
                            <label for="uname">Name</label>
                            <input type="text" name="username" class="form-control" required id="uname">
                        </div>
                        <div class="form-group row">
                            <label for="address">Address</label>
                            <input type="text" name="address" class="form-control" required id="address">
                        </div>
                        <div class="form-group row">
                            <label for="phoneNumber">Phone number</label>
                            <input type="tel" class="form-control" minlength="10" maxlength="10" name="phoneNumber" required id="phoneNumber">
                        </div>
                        <div class="form-group row">
                            <label for="email">Email address</label>
                            <input type="email" name="email" class="form-control" id="email" required aria-describedby="emailHelp">
                        </div>
                        <div class="form-group row">
                            <label for="password">Password</label>
                            <input type="password"  minlength="6" name="password" class="form-control" required id="password">
                        </div>
                        <div class="form-group row">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" minlength="6" name="confirmPassword" class="form-control" required id="confirmPassword">
                        </div>
                        <div class="form-group row">
                            <label for="type">Type</label>
                            <input type="text" name="type" id="type" value="Sponsor" readonly class="form-control">
                        </div>
                    </div>
<span style="color: red; font-weight: bold"><%= err%></span>

                </div>
                <button style="margin-left:44rem" type="submit" onsubmit="validation()" class="btn btn-primary">Register</button>

            </form>

