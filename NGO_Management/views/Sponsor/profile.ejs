<%- include('../partials/sponsor/header') %>
<div class="contentPage" >

    <div class="container">
        <% if(sponsorsProfile.length !== 0){
            var i = 1;
        sponsorsProfile.forEach(function (data){ %>

        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5 ml-5 mb-5">
                <div class="row z-depth-1">
                    <div class="col-sm-4 bg rounded-left ">
                        <div class="card-block text-center text-black mt-3 mb-3">
                            <i class="fas fa-user-tie fa-4x" mt-7></i>
                            <h2 class="font-weight-bold mt-4"><%= data.name%></h2>
                            <p>Sponsor</p>
                            <!-- <i class="far fa-edit fa-1x mb-2"></i> -->
                        </div>
                    </div>
                    <div class="col-sm-8 bg rounded-right">
                        <h3 class="mt-3">Profile</h3>
                        <hr class="badge-dark mt-0 w-80">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">User Id</p>
                                <h6 text-muted><%= data.u_id%></h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Contact No</p>
                                <h6 text-muted><%= data.phone_no%></h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Address</p>
                                <h6 text-muted><%= data.address%></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%  i++; })%>
    <% }else{ %>
        <h2>Not Applied to any NGO</h2>
    <%  }%>

    <% if(sponsorsNgo.length !== 0){
        var i = 1;
    sponsorsNgo.forEach(function (ngoData){ %>

        <div class="row d-flex justify-content-center">
            <div class="col-md-6 bg-light ml-5">
                <div class="row z-depth-1">
                    <h3 class="mt-2 ml-2 ">Applied to <%= ngoData.ngo_name %> </h3>
                    <hr class="badge-dark mt-0  w-100">
                    <div class="row d-flex justify-content-center" style="padding:1rem;">

                        <div class="col-sm-6">
                            <h6 class="font-weight-bold">NGO Id</h6>
                            <h6 text-muted><%= ngoData.ngo_id %></h6>
                        </div>
                        <div class="col-sm-6">
                            <h6 class="font-weight-bold">Address</h6>
                            <h6 text-muted><%= ngoData.city%></h6>
                        </div>
                        <div class="col-sm-6">
                            <h6 class="font-weight-bold">NGO Website</h6>
                            <h6 text-muted><a href="<%= ngoData.ngo_link%>"><%= ngoData.ngo_link%></a></h6>
                        </div>
                        <div class="col-sm-6">
                            <h6 class="font-weight-bold">Message</h6>
                            <h6 text-muted><%= ngoData.status%></h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    <br>
    <%  i++; })%>
    <% }else{ %>
        <h2>Not Applied to any NGO</h2>
    <%  }%>
</div>



<%- include('../partials/footerUser')%>
